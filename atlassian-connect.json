{
  "key": "project-pilot",
  "name": "ProjectPilot",
  "description": "AI-powered virtual assistant for JIRA",
  "baseUrl": "{{localBaseUrl}}",
  "authentication": {
    "type": "jwt"
  },
  "lifecycle": {
    "installed": "/installed"
  },
  "scopes": ["READ"],
  "apiMigrations": {
    "signed-install": true
  },
  "modules": {
    "generalPages": [
      {
        "key": "project-pilot-page-jira",
        "location": "system.top.navigation.bar",
        "name": {
          "value": "ProjectPilot"
        },
        "url": "/project-pilot",
        "conditions": [
          {
            "condition": "user_is_logged_in"
          }
        ]
      },
      {
        "key": "hello-world-page-confluence",
        "location": "system.header/left",
        "name": {
          "value": "Hello World"
        },
        "url": "/hello-world",
        "conditions": [
          {
            "condition": "user_is_logged_in"
          }
        ]
      }
    ]
  }
}
